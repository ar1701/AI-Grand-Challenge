{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: watch",
      "type": "npm",
      "script": "watch",
      "group": "build",
      "presentation": {
        "panel": "dedicated",
        "reveal": "never"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Starting compilation in watch mode.*$",
          "endsPattern": "^.*Found \\d+ errors?\\. Watching for file changes\\.$|^.*Compilation complete\\. Watching for file changes\\.$"
        }
      }
    },
    {
      "type": "npm",
      "script": "compile",
      "group": "build",
      "presentation": {
        "panel": "dedicated",
        "reveal": "silent"
      },
      "problemMatcher": [
        "$tsc"
      ]
    }
  ]
}